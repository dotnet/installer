<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Build.Utilities.Core" Version="15.7.179-*" />
    <PackageReference Include="Microsoft.Build.Framework" Version="15.7.179-*" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\BinaryTool\BinaryTool.csproj" />
  </ItemGroup>

  <UsingTask TaskName="BinaryToolTask" AssemblyFile="$(OutputDir)BinaryToolTask.dll" />

  <Target Name="InvokeToolTask" AfterTargets="Build">
    <BinaryToolTask />
  </Target>

</Project>
