<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Library</OutputType>
    <TargetFramework>$(NetCurrent)</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <IsPackable>true</IsPackable>
    <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
    <NoWarn>$(NoWarn);NU5128;NU5129;NU5100</NoWarn>
    <BuildOutputTargetFolder>tasks</BuildOutputTargetFolder>
    <GenerateDependencyFile>true</GenerateDependencyFile>
    <GenerateRuntimeConfigurationFiles>true</GenerateRuntimeConfigurationFiles>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Build.Utilities.Core" PrivateAssets="all" ExcludeAssets="Runtime" />

    <Content Include="**\*.props" Pack="true" PackagePath="%(RecursiveDir)%(Filename)%(Extension)" Publish="true"
             CopyToOutputDirectory="PreserveNewest" TargetPath="%(RecursiveDir)%(Filename)%(Extension)" />
  </ItemGroup>

  <PropertyGroup>
    <BinaryToolingProject>..\BinaryDetection\BinaryDetection.csproj</BinaryToolingProject>
    <BinaryToolingPublishDir>$(OutputPath)\BinaryDetection\</BinaryToolingPublishDir>
  </PropertyGroup>

  <Target Name="AddToolToPackage" BeforeTargets="Build">
    <MSBuild Projects="$(BinaryToolingProject)" Targets="Publish" Properties="TargetFramework=$(NetCurrent);Configuration=$(Configuration);PublishDir=$(BinaryToolingPublishDir);" />
    <ItemGroup>
      <_BinaryDetectionToolPublishContent Include="$(BinaryToolingPublishDir)**" />
      <Content Include="@(_BinaryDetectionToolPublishContent)"  Pack="true" PackagePath="tools\%(RecursiveDir)%(Filename)%(Extension)" Publish="true"
               CopyToOutputDirectory="PreserveNewest" TargetPath="tools\%(RecursiveDir)%(Filename)%(Extension)"/>
    </ItemGroup>
  </Target>

</Project>